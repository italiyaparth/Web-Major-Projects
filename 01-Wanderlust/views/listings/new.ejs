<!-- Step 9 - except for body all other code is in boilerplate -->
<% layout("/layouts/boilerplate") %>

<body>
    
    <!-- Step 13 -->
    <div class="row">

        <div class="col-8 offset-2">

            <h3 class="mt-3">Create a New Listing</h3>

            <form action="/listings" method="post">
    
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" placeholder="enter title" type="text">
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="enter description"></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" class="form-control" placeholder="enter image URL/link for now" type="text">
                </div>
        
                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" placeholder="enter price" type="number">
                    </div>
            
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" class="form-control" placeholder="enter country" type="text">
                    </div>

                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" class="form-control" placeholder="enter location" type="text">
                </div>
                       
                <button class="btn btn-dark mb-3 add-btn">Add</button>
        
            </form>

        </div>

    </div>


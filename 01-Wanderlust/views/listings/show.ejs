<% layout("/layouts/boilerplate") %>

<body>

    <!-- Step 15 -->
    <div class="row col-8 offset-2 mt-3">

        <h3 class="offset-2">Your Listing Details:</h3>

        <div class="card col-6 offset-2">
            <img class="card-img-top show-img mb-3" src="<%= listing.image %>" alt="listing_image">

            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b> <br><br>
                    <%= listing.description %> <br><br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
                    <%= listing.location %> <br>
                    <%= listing.country %> <br>
                </p>
            </div>
        </div>

        <div class="btns offset-2 mb-3">

            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
    
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark delete-btn">Delete</button>
            </form>

        </div>

    </div>


